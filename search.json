---
layout: null
---
[
  {% assign counter = 0 %}
  {% for post in site.posts %}
  {
    "id": {{ counter }},
    "url": "{{ site.baseurl }}{{ post.url }}",
    "title": "{{ post.title | escape }}",
    "body": {{ post.content | strip_html | strip_newlines | jsonify }}
  }{% assign counter = counter | plus: 1 %}{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
